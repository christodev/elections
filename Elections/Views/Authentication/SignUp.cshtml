@model User
 
<style>
    .signup-form {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: flex-start;
        padding-left: 20px;
        padding-top: 10px;
    }

    label {
        margin-top: 1rem;
        width: 20rem;
    }

    button {
        border-radius: 6px;
        padding: 0.2rem 0.8rem;
        font-size: 18px;
        border: none;
        box-shadow: 0px 0px 5px black;
        margin: 1rem 0;
    }

    input {
        outline: none;
        border: none;
        border: 1px solid rgba(0,0,0,0.5);
        border-radius: 6px;
        width: 20rem;
        padding: 0.2rem 1rem;
        font-size: 17px;
        
    }

    .error-label {
        font-size: 17px;
        margin-left: 20px;
    }

    h1 {
        margin-left: 20px;
    }

</style>

@{
    <h1>Sign Up</h1>
    <p class="text-danger error-label">@ViewData["Error"]</p>

    <form method="post" asp-action="SignUp" class="signup-form">

        <label asp-for="UserName">Username:</label>
        <input type="text" id="UserName" asp-for="UserName" />
        <span asp-validation-for="UserName" class="text-danger"></span>

        <label asp-for="Email">Email:</label>
        <input type="text" id="Email" asp-for="Email" />
        <span asp-validation-for="Email" class="text-danger"></span>

        <label asp-for="Password">Password:</label>
        <input type="password" id="Password" asp-for="Password" />
        <span asp-validation-for="Password" class="text-danger"></span>

        <button type="submit" class="btn-primary">Create Account</button>

        <p>Already have an account, <a asp-action="SignIn">Sign in</a> here!</p>
    </form>
}
